<h1>
  Posts
  <%= link_to "New Post", new_post_path %>
</h1>
<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.title, post_path(post) %> <!-- Railsでは、post_path(post)とすると、post.idが使われる（post.idでもOK） -->
      <%= link_to "Edit", edit_post_path(post) %> <!-- Railsでは、edit_post_path(post)とすると、post.idが使われる（post.idでもOK） -->
      <%= 
          button_to "Delete", 
          post_path(post), 
          method: :delete, 
          form: { class: "delete-form" },
          data: { turbo_confirm: "Are you sure?" }
      %>
    </li>
  <% end %>
</ul>


